<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="info.miki.znacenjePrezimena.ui.MainActivity">

    <!--
    This layout is a two-pane layout for the master/detail flow.
    -->

    <!-- The static MasterListFragment -->
    <fragment
        android:id="@+id/master_list_fragment"
        android:name="info.miki.znacenjePrezimena.ui.MasterListFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <!-- A small divider -->
    <View
        android:id="@+id/divider_layout"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <!-- LinearLayout that arranges all three Android-Me body part images vertically -->

    <FrameLayout
        android:id="@+id/book_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />


</LinearLayout>